{% extends 'base.html.twig' %}

{% block title %}Mon compte {% endblock %}


{% block css %}
	<link rel="stylesheet" href="assets/css/register.css">
{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Nouveau client ? Cr√©er votre compte ! </h1>
     {# <div class="container"> #}
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.nom_utilisateur) }}
        {{ form_row(registrationForm.prenom_utilisateur) }}
        {{ form_row(registrationForm.email_utilisateur) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">S'enregistrer</button>
    {{ form_end(registrationForm) }}
    {# </div> #}
{% endblock %}
