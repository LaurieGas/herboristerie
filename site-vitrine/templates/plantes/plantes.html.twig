{% extends 'base.html.twig'%}

{% block title %}Nos plantes{% endblock %}

{% block css %}
	<link rel="stylesheet" href="assets/css/styleAbecedaire.css">
{% endblock %}

{% block body %}
<!-- PRESENTATION DES PLANTES -->
<div class="titre-plante">
    <h1>NOS PLANTES</h1>
</div>
<br>
<section
    class="section-plante">
    {# <div class="card-deck  justify-content-center"> #}
    <div class="row flex-lg-row flex-xl-row flex-column">
        {% for x in plante %}
            <div class="col-xl-4 col-lg-4 col-md-8 col-sm-12 m-auto text-center">
                <div class="card bg-light my-5 shadow ">
                    <h3 class="card-header">{{x.nomPlante}}</h3>
                    <img height="350px" class="rounded-circle border m-2" src="uploads/images/plantes/{{x.imagePlante}}" alt="Card image">
                    <div class="card-body">
                        <p>{{x.famille}}</p>
                    </div>
                    <div class="card-footer text-muted">
                        <a href="{{ path('fiches', {id: x.id}) }}" class="btn btn-secondary btn-sm mx-auto d-block">En savoir plus</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</section>
<!-- FIN PRESENTATION DES PLANTES -->


